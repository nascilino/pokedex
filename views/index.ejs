<!DOCTYPE html>
<html lang="pr-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Pokedéx</title>
</head>

<body>
    <nav>
        <article>
            <img src="./img/pokebola-go.png" class="img-pokebola" alt="Foto da pokebola">
            <h1>
                <a href="/">Pokedéx</a>
            </h1>
        </article>
        <ul>
            <li>
                <a href="/">Home</a>
            </li>
            <li>
                <a href="/cadastro">Cadastro</a>
            </li>
        </ul>
    </nav>

    <% if(message != "") {  %>
        <section id="message">
            <p><%= message %></p> <span id="close">&times;</span>
        </section>
    <% }  %>

    <header>
        <h1>Pokedéx</h1>
    </header>
    <section id="pokedex">
        <% pokedex.forEach((item, index) => { %>
            <a class= "card" href="/detalhes/<%= index %>">
            <h2>
                <%= item.nome %>
            </h2>
            <img src='<%= item.imagem %>'>
            <h3>
                <%= item.tipo %>
            </h3>
        <% }) %>
    </a>
    </section>
    <script src="/js/script.js"></script>
</body>

</html>
